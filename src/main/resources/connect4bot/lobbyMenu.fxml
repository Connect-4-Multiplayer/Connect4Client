<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="connect4bot.LobbyMenuController">
   <children>
      <VBox alignment="CENTER" layoutX="151.0" layoutY="415.0" prefHeight="171.0" prefWidth="449.0">
         <children>
            <Label alignment="TOP_CENTER" text="Enter Lobby Code:">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="lobbyCode" onMouseClicked="#hideFailureLabel" prefHeight="50.0" prefWidth="250.0" />
                  <Button mnemonicParsing="false" onMouseClicked="#submitForm" prefHeight="50.0" prefWidth="100.0" text="Join">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="failLabel" text="Failed to join the lobby" visible="false">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
